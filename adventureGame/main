int Fight();

int main() {
    
    Intro();
    //Hero();
    Fight();
    
    return 0;
}

void Intro() {
    
    cout << "Welcome to my adventure game!\n";
    cout << "Here you will create your hero.\n";
    cout << "Once you create your hero, you will fight a monster!\n";
}

